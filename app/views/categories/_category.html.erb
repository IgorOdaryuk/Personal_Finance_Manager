<div class="container">


  <div class="card text-bg-success mb-3" style="max-width: 18rem;">

      <%= button_to image_tag("delete-button.png", width: '20px'), 
                      category, method: :delete, data: {turbo_confirm: t('confirm')}, 
                      class: 'nav-link bg-transparent border-0 shadow-none position-absolute top-10 end-0 ', id:'delete-button' %>

    <div class="d flex-column h-100 p-5 text-shadow-1">

      <h2 class="display-7 "><%= category.name %></h2>
      <div id="description-text"><%= category.description %></div><br><br><br>

      <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups" id="button-groups">
        <div class="btn-group me-2" role="group" aria-label="First group">
          <%= link_to t('show'), category, class:"btn btn-light", id:"card-button-groups" %>
          <%= link_to t('edit'), edit_category_path(category), class:"btn btn-light", id:"card-button-groups" %><br>
          <%= link_to t('categories.show_operations'), show_category_operations_path(category), class:"btn btn-light", id:"card-button-groups" %>
        </div>
      </div>

    </div>
  </div>      
</div>
