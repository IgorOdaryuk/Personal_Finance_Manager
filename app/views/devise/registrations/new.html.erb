<div class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <h2 class="text-center"><%= t('header.user.signup') %></h2>
      <div class="conrainer" id="form-signup">
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
      </div>

      <div>
        <%= f.label t('user.form.password') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %><%= t('user.form.char_min') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control"  %>
      </div>

      <div>
        <%= f.label t('user.form.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
      </div>

      <div>
        <%= t('user.select_language') %><br>
        <%= image_tag("locales/uk.png", :alt => " UK ", width: "20px") %>     <%= radio_button("user", "locale", "uk") %> <br>
        <%= image_tag("locales/en.png", :alt => " EN ", width: "20px") %>     <%= radio_button("user", "locale", "en") %> <br>
      </div>


      <div class="container p-3 text-center ">
        <%= f.submit t('header.user.signup'), class:"btn btn-success" %>
      </div>
    </div>  
    <%= render "devise/shared/links" %>
  <% end %>
</div>
